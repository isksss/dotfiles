#########################
# alias 
#########################
alias cl='clear'

# ls
alias ls='ls --color -G'
# alias ls='ls -G'
alias la='ls -a'
alias ll='ls -al'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias cdd='cd ~/dotfiles'
alias cdw='cd ~/workspace'

# git
alias g='git'
alias gs='git status'
alias ga='git add -A'
alias gb='g branch'
alias gc='git checkout'
alias gcb='gc -b'
alias gcm='git commit -m'
alias gm='git merge'
alias gl='git log'
alias gla='git log --oneline --graph --decorate --branches --tags --remotes'
alias gpl="git pull --all"
alias gpu='git push origin --all'
alias gd='git diff'
alias gf='git fetch'

# safe
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'

# docker
alias d='docker'
alias dc='docker compose'

# pyenv virtualenv
alias py='pyenv'
alias pyv='pyenv virtualenv'
alias pyg='pyenv global'

# nvim
for app in 'n' 'vi' 'vim' 'emacs'
do
    alias $app='nvim'
done

# zsh
alias zs='clear && source ~/.zshrc'

# 
if [ $(uname) = "Linux" ]; then
    alias pbcopy='xclip -selection c'
    alias pbpaste='xclip -selection c -o'

    alias paci='sudo pacman -S'
    alias pacs='pacman -Ss'
fi

alias c='pbcopy'
alias p='pbpaste'
