#########################
# alias 
#########################
alias cl='clear'

# ls
alias ls='ls --color=auto'
alias ls='ls -G'
alias la='ls -a'
alias ll='ls -al'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias cdd='cd ~/dotfiles'

# git
alias g='git'
alias gs='git status'
alias ga='git add -A'
alias gc='git checkout'
alias gcb='gc -b'
alias gcm='git commit -m'
alias gl='git log'
alias gla='git log --oneline --graph'
alias gp='git push'
alias gd='git diff'
alias gf='git fetch'

# safe
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'
# docker
alias d='docker'
alias dc='docker compose'

# pyenv virtualenv
alias py='pyenv'
alias pyv='pyenv virtualenv'
alias pyg='pyenv global'

# nvim
alias n='nvim'
alias n.='n .'

# zsh
alias zs='clear && source ~/.zshrc'

# 
if [ $(uname) = "Linux" ]; then
    alias pbcopy='xclip -selection c'
    alias pbpaste='xclip -selection c -o'
fi

alias c='pbcopy'
alias p='pbpaste'
