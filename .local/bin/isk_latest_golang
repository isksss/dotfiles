#!/bin/bash
set -e
VERSION=$1
DIR=$(cd $(dirname $0); pwd)
cd $DIR

rm -rf $DIR/go

curl -fsSL https://go.dev/dl/go$VERSION.linux-amd64.tar.gz -o $DIR/golang_tar
tar -C $DIR -xzf golang_tar
rm -rf $DIR/golang_tar
mv $DIR/go $DIR/go_dir

cp $DIR/go_dir/bin/go $DIR/go
rm -rf $DIR/go_dir

chmod u+x $DIR/go
