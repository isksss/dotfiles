{   
    // ===== font =====
    "editor.fontFamily": "'Hackgen Console NF','Droid Sans Mono', 'monospace', monospace",
    // ===== markdown =====
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "explicit"
    },
}